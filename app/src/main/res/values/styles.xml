<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>
    <style name="TbrowStyle">
        <item name="android:layout_marginTop">30dp</item>
    </style>
    <style name="textStyle_main">
        <item name="android:textSize">23dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="buttonStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_height">68dp</item>
    </style>

    <!--当前Activity的动画效果-->
    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <!--<item name="android:activityOpenExitAnimation">@anim/out_to_right</item>-->
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item><!--B在顶层，从B到A，B被finish后A的效果-->
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item><!--B在顶层，从B到A，B被finish后B的效果-->
        <!--<item name="android:taskOpenEnterAnimation">@null</item>-->
        <!--<item name="android:taskOpenExitAnimation">@null</item>-->
        <!--<item name="android:taskCloseEnterAnimation">@null</item>-->
        <!--<item name="android:taskCloseExitAnimation">@null</item>-->
        <!--<item name="android:taskToFrontEnterAnimation">@null</item>-->
        <!--<item name="android:taskToFrontExitAnimation">@null</item>-->
        <!--<item name="android:taskToBackEnterAnimation">@null</item>-->
        <!--<item name="android:taskToBackExitAnimation">@null</item>-->
    </style>

    <!--标题栏style-->
    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingRight">50dp</item>
    </style>
    <!--标题栏按钮-->
    <style name="title_btn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <!--“关于”界面textview的style-->
    <style name="textviewStyle_about">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:textSize">9pt</item>
        <item name="android:paddingTop">2pt</item>
        <item name="android:paddingBottom">2pt</item>
        <item name="android:paddingRight">4pt</item>
        <item name="android:paddingLeft">4pt</item>
    </style>
    <!--“帮助”界面textview的style-->
    <style name="textviewStyle_help">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:textSize">9pt</item>
        <item name="android:paddingTop">2pt</item>
        <item name="android:paddingBottom">2pt</item>
        <item name="android:paddingRight">4pt</item>
        <item name="android:paddingLeft">4pt</item>
    </style>
    <!--“设置界面”-->
    <style name="textStyle_setting">
        <item name="android:textSize">23dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <!--“设置界面Linear边界”-->
    <style name="linearbound_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/underline</item>
    </style>
    <!--setting-->
    <style name="btn_pre_setting">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18dp</item>
    </style>
    <!--setting-->
    <style name="buttonStyle_setting">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">23dp</item>
        <item name="android:layout_height">68dp</item>
    </style>


</resources>
